<Window x:Class="AMONIC.LogoutDetectation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMONIC"
        mc:Ignorable="d"
        Title="LogoutDetectation" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="No Logout Detcated" Margin="30 5 0 0"/>
        <Label Grid.Row="1" Content="Reason:" Margin="30 5 0 0" VerticalAlignment="Bottom"/>
        <DataGrid Grid.Row="2" Margin="50 10 30 10"/>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <RadioButton Content="Softwere Crash"  Grid.Column="0" Margin="70 10 0 30"/>
            <RadioButton Content="System Crash" HorizontalAlignment="Left" Grid.Column="1" Margin="10"/>
            <Button Grid.Column="2" Content="Confirm" Height="20" Width="100" HorizontalAlignment="Left"/>

        </Grid>
    </Grid>
</Window>
