<Window x:Class="AMONIC.All"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMONIC"
        mc:Ignorable="d"
        Title="All" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Search For Flights" VerticalAlignment="Center" Width="100" Margin="0 100 0 0" x:Name="searchForFlights" Click="searchForFlights_Click"/>
            <Button Content="Booking Confirmation" VerticalAlignment="Center" Width="100" Margin="0 10 0 0" x:Name="bookingConfirmation" Click="bookingConfirmation_Click"/>
            <Button Content="Billing Confirmation" VerticalAlignment="Center" Width="100" Margin="0 10 0 0" x:Name="billingConfirmation" Click="billingConfirmation_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
